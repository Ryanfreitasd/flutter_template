{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flutter: Run (Web - Codespaces)",
      "type": "shell",
      "command": "flutter",
      "args": [
        "run",
        "-d",
        "web-server",
        "--web-port=8080",
        "--web-hostname=0.0.0.0"
      ],
      "options": {
        "cwd": "${workspaceFolder}/my_app"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^Flutter run key commands\\.$",
            "endsPattern": "^Application finished\\.$"
          }
        }
      ]
    },
    {
      "label": "Flutter: Build Web",
      "type": "shell",
      "command": "flutter",
      "args": ["build", "web"],
      "options": {
        "cwd": "${workspaceFolder}/my_app"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Flutter: Test",
      "type": "shell",
      "command": "flutter",
      "args": ["test"],
      "options": {
        "cwd": "${workspaceFolder}/my_app"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Flutter: Clean",
      "type": "shell",
      "command": "flutter",
      "args": ["clean"],
      "options": {
        "cwd": "${workspaceFolder}/my_app"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Flutter: Pub Get",
      "type": "shell",
      "command": "flutter",
      "args": ["pub", "get"],
      "options": {
        "cwd": "${workspaceFolder}/my_app"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Flutter: Doctor",
      "type": "shell",
      "command": "flutter",
      "args": ["doctor", "-v"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
